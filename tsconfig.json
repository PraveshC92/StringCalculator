{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],

  "exclude": [
    "node_modules",
    "public_html",
    "test",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
